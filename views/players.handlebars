
<h2>Add New Player</h2>
<form action="/players" method="POST">
First Name: <input type = "text" name = "firstName">
Last Name: <input type = "text" name = "lastName">
Dues Paid? <select type= "number" name="duesPaid">
                <option value="0">No</option>
                <option value="1">Yes</option>
        </select>
Roster: <input type = "number" name = "roster"><br>
<input type="submit" value="Add Player">
</form>
<div>
  <h2>Current Players List</h2>
  <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Dues Paid?</th>
        <th>Roster ID</th>
      </tr>
      
      {{#each results}}
      <tr>
      <td>{{this.firstName}}</td>
      <td>{{this.lastName}}</td>
      <td>{{this.duesPaid}}</td>
      <td>{{this.roster}}</td>
      </tr>
        {{/each}}
  </table>
</div>
